<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   android:layout_width="match_parent" xmlns:tools="http://schemas.android.com/tools"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   android:background="@color/gray"
                                                   tools:context=".View.AlquilerView"
                                                   android:layout_height="match_parent">

    <com.google.android.material.button.MaterialButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="?attr/materialIconButtonStyle"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:iconTint="@color/black"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:id="@+id/btnBackAlquiler"
            app:icon="@drawable/round_arrow_back_24"
    />

    <TextView android:layout_width="wrap_content"
              android:text="Alquilar"
              app:layout_constraintTop_toTopOf="parent"
              android:textAlignment="center"
              android:textSize="20sp"
              android:textStyle="bold"
              android:textColor="@color/black"
              android:layout_marginTop="28dp"
              android:layout_marginStart="20dp"
              android:id="@+id/tvAlquiler"
              app:layout_constraintStart_toEndOf="@+id/btnBackAlquiler"
              android:layout_height="wrap_content"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:id="@+id/llImgMaquina"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/tvAlquiler"
            android:layout_height="wrap_content">
        <ImageView
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:id="@+id/ivMaquinaAl"
                android:src="@drawable/torito"
        />
        <TextView
                android:layout_width="wrap_content"
                android:text="Nombre Maquina"
                android:id="@+id/tvNombreMaquina"
                android:textStyle="bold"
                android:layout_marginStart="20dp"
                android:layout_gravity="center"
                android:layout_height="wrap_content"/>
    </LinearLayout>

    <com.google.android.material.divider.MaterialDivider
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:id="@+id/mdAl"
            app:layout_constraintTop_toBottomOf="@+id/llImgMaquina"
    />

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            app:layout_constraintTop_toBottomOf="@+id/mdAl"
            android:layout_height="wrap_content">

        <TextView android:layout_width="wrap_content"
                  android:textStyle="bold"
                  android:text="Datos alquiler"
                  android:textSize="15sp"
                  android:id="@+id/tvDatos"
                  app:layout_constraintTop_toTopOf="parent"
                  app:layout_constraintStart_toStartOf="parent"
                  android:layout_height="wrap_content"/>

        <LinearLayout android:layout_width="match_parent"
                      android:id="@+id/llFecha"
                      android:layout_marginTop="20dp"
                      android:orientation="horizontal"
                      app:layout_constraintTop_toBottomOf="@+id/tvDatos"
                      android:layout_height="wrap_content">
            <TextView android:layout_width="wrap_content"
                      android:text="Fechas"
                      android:layout_marginEnd="20dp"
                      android:textColor="@color/black"
                      android:layout_height="wrap_content"/>
            <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="250dp"
                    android:id="@+id/tilDatePickerAlquiler"
                    app:startIconDrawable="@drawable/round_date_range_24"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_height="wrap_content">
                <com.google.android.material.textfield.TextInputEditText
                        android:inputType="date"
                        android:focusable="false"
                        android:id="@+id/tietDatePickerAlquiler"
                        android:clickable="true"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"/>

            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:id="@+id/llLocalidad"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@+id/llFecha"
                android:layout_height="wrap_content">
            <TextView android:layout_width="wrap_content"
                      android:text="Localidad"
                      android:textColor="@color/black"
                      android:layout_height="wrap_content"/>
            <Spinner android:layout_width="150dp"
                     android:id="@+id/spinnerLocalidadAlquiler"
                     android:layout_marginStart="20dp"
                     android:layout_height="50dp"/>
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.button.MaterialButton
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:text="@string/alquilar"
            app:cornerRadius="10dp"
            android:id="@+id/btnAlquiler"
    />

</androidx.constraintlayout.widget.ConstraintLayout>