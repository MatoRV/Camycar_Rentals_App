<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_marginStart="20dp"
              android:layout_marginEnd="20dp"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <com.google.android.material.button.MaterialButton android:layout_width="wrap_content"
                                                       style="?attr/materialIconButtonStyle"
                                                       android:layout_marginStart="-15dp"
                                                       app:iconTint="@color/black"
                                                       android:id="@+id/btnBackPI"
                                                       app:icon="@drawable/round_arrow_back_24"
                                                       android:layout_height="wrap_content"/>
    <TextView android:layout_width="match_parent"
              android:text="Información Personal"
              android:textSize="25sp"
              android:textStyle="bold"
              android:layout_marginTop="10dp"
              android:layout_height="wrap_content"/>
    <TextView android:layout_width="wrap_content"
              android:layout_marginTop="30dp"
              android:textSize="18sp"
              android:text="Nombre"
              android:textStyle="bold"
              android:layout_height="wrap_content"/>
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:text="nombre usuario"/>
    <com.google.android.material.divider.MaterialDivider android:layout_width="match_parent"
                                                         android:layout_marginTop="20dp"
                                                         android:layout_height="wrap_content"/>
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:textSize="18sp"
              android:textStyle="bold"
              android:layout_marginTop="20dp"
              android:text="Apellidos"/>
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:text="apellido1 apellido2"/>
    <com.google.android.material.divider.MaterialDivider android:layout_width="match_parent" android:layout_height="wrap_content"
                                                         android:layout_marginTop="20dp"/>
    <TextView android:layout_width="wrap_content"
              android:text="Correo electrónico"
              android:textSize="18sp"
              android:textStyle="bold"
              android:layout_marginTop="20dp"
              android:layout_height="wrap_content"/>
    <TextView android:layout_width="wrap_content"
              android:text="example@example.com"
              android:layout_height="wrap_content"/>
    <com.google.android.material.divider.MaterialDivider android:layout_width="match_parent"
                                                         android:layout_marginTop="20dp"
                                                         android:layout_height="wrap_content"/>
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:layout_marginTop="20dp"
              android:text="Contraseña"
              android:textStyle="bold"
              android:textSize="18sp"
    />
    <TextView android:layout_width="wrap_content"
              android:text="*********************"
              android:layout_height="wrap_content"/>
</LinearLayout>